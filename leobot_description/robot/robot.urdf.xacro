<?xml version="1.0"?>
<robot name="leobot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Included files -->
  <xacro:include filename="$(find leobot_description)/urdf/materials.urdf.xacro"/>
  <xacro:include filename="$(find leobot_description)/urdf/common.urdf.xacro"/>
  <xacro:include filename="$(find leobot_description)/urdf/wheels.urdf.xacro"/>
  <xacro:include filename="$(find leobot_description)/urdf/sensors/hokuyo.urdf.xacro"/>

    <!-- Robot properties -->
  <xacro:property name="base_radius" value="0.25"/>
  <xacro:property name="base_height" value="1.0"/>

  <xacro:property name="caster_radius" value="0.05"/>
  <xacro:property name="caster_mass" value="10"/>

  <xacro:property name="wheel_width" value="0.005"/>
  <xacro:property name="wheel_radius" value="0.1"/>
  <xacro:property name="wheel_mass" value="10"/>

  <xacro:property name="bearing_radius" value="0.01"/>

  <!-- Robot links -->
  <link name="base_link">
    <visual>
      <xacro:cylinder_geometry radius="${base_radius}" height="${base_height}"/>
      <xacro:navajo_white_material/>
    </visual>
    <xacro:cylinder_collision radius="${base_radius}" height="${base_height}"/>
    <xacro:cylinder_inertia mass="10" radius="${base_radius}" height="${base_height}"/>
  </link>

  <xacro:caster_wheel radius="${caster_radius}" mass="${caster_mass}" base_radius="${base_radius}" base_height="${base_height}"/>
  <xacro:standard_wheel prefix="left" direction="1.0" bearing_radius="${bearing_radius}" radius="${wheel_radius}" width="${wheel_width}" mass="${wheel_mass}" base_radius="${base_radius}"/>
  <xacro:standard_wheel prefix="right" direction="-1.0" bearing_radius="${bearing_radius}" radius="${wheel_radius}" width="${wheel_width}" mass="${wheel_mass}" base_radius="${base_radius}"/>
  <xacro:LIDAR_hokuyo base_radius="${base_radius}" base_height="${base_height}"/>

  <link name="head_link">
    <visual>
      <xacro:cylinder_geometry radius="0.15" height="0.1"/>
      <xacro:navajo_white_material/>
    </visual>
    <xacro:cylinder_collision radius="0.15" height="0.1"/>
    <xacro:cylinder_inertia mass="1" radius="0.15" height="0.1"/>
  </link>

  <joint name="head_link_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0.525"/>
    <axis xyz="0 0 1" />
    <parent link="base_link"/>
    <child link="head_link"/>
    <limit effort="10" velocity="10" lower="${-pi/2}" upper="${pi/2}" />

  </joint>

  <transmission name="head_transmission">
     <type>transmission_interface/SimpleTransmission</type>
     <joint name="head_link_joint">
       <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
     </joint>
     <actuator name="head_motor">
       <hardwareInterface>EffortJointInterface</hardwareInterface>
       <mechanicalReduction>1</mechanicalReduction>
     </actuator>
  </transmission>

  <link name="camera_left_link">

    <visual>
      <xacro:box_geometry width="0.05" height="0.05" depth="0.05"/>
      <xacro:green_material/>
    </visual>
    <xacro:box_collision width="0.05" height="0.05" depth="0.05"/>
    <xacro:box_inertia mass="0.1" width="0.05" height="0.05" depth="0.05"/>
  </link>

  <joint name="camera_left_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0.075 0.075"/>
    <parent link="head_link"/>
    <child link="camera_left_link"/>
  </joint>

  <link name="camera_right_link">
    <visual>
      <xacro:box_geometry width="0.05" height="0.05" depth="0.05"/>
      <xacro:green_material/>
    </visual>
    <xacro:box_collision width="0.05" height="0.05" depth="0.05"/>
    <xacro:box_inertia mass="0.1" width="0.05" height="0.05" depth="0.05"/>
  </link>

  <joint name="camera_right_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 -0.075 0.075"/>
    <parent link="head_link"/>
    <child link="camera_right_link"/>
  </joint>

</robot>