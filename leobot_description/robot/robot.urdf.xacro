<?xml version="1.0"?>
<robot name="leobot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Included files -->
  <xacro:include filename="$(find leobot_description)/urdf/materials.urdf.xacro"/>
  <xacro:include filename="$(find leobot_description)/urdf/common.urdf.xacro"/>

  <!-- Robot links -->
  <link name="base_link">
    <visual>
      <xacro:cylinder_geometry radius="0.25" height="1.0"/>
      <xacro:navajo_white_material/>
    </visual>
    <xacro:cylinder_collision radius="0.25" height="1.0"/>
    <xacro:cylinder_inertia mass="10" radius="0.25" height="1.0"/>
  </link>

  <link name="left_wheel_link">
    <visual>
      <xacro:cylinder_geometry radius="0.1" height="0.05"/>
      <xacro:red_material/>
    </visual>
    <xacro:cylinder_collision radius="0.1" height="0.05"/>
    <xacro:cylinder_inertia mass="10" radius="0.1" height="0.05"/>
  </link>

  <joint name="left_wheel_body_joint" type="continuous">
    <origin rpy="${pi / 2} 0 0" xyz="0.0 0.275 -0.55"/>
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <axis xyz="0 0 1" />
  </joint>

  <link name="right_wheel_link">
    <visual>
      <xacro:cylinder_geometry radius="0.1" height="0.05"/>
      <xacro:red_material/>
    </visual>
    <xacro:cylinder_collision radius="0.1" height="0.05"/>
    <xacro:cylinder_inertia mass="10" radius="0.1" height="0.05"/>
  </link>

  <joint name="right_wheel_body_joint" type="continuous">
    <origin rpy="${pi / 2} 0 0" xyz="0.0 -0.275 -0.55"/>
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <axis xyz="0 0 1" />
  </joint>

  <link name="caster_wheel_link">
    <visual>
      <xacro:sphere_geometry radius="0.08"/>
      <xacro:red_material/>
    </visual>
    <xacro:sphere_collision radius="0.08"/>
    <xacro:sphere_inertia mass="10" radius="0.08"/>
  </link>

  <joint name="caster_wheel_body_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.2 0.0 -0.57"/>
    <parent link="base_link"/>
    <child link="caster_wheel_link"/>
  </joint>

  <link name="camera_left_link">
    <visual>
      <xacro:box_geometry width="0.05" height="0.05" depth="0.05"/>
      <xacro:green_material/>
    </visual>
    <xacro:box_collision width="0.05" height="0.05" depth="0.05"/>
    <xacro:box_inertia mass="0.1" width="0.05" height="0.05" depth="0.05"/>
  </link>

  <joint name="camera_left_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0.075 0.525"/>
    <parent link="base_link"/>
    <child link="camera_left_link"/>
  </joint>

  <link name="camera_right_link">
    <visual>
      <xacro:box_geometry width="0.05" height="0.05" depth="0.05"/>
      <xacro:green_material/>
    </visual>
    <xacro:box_collision width="0.05" height="0.05" depth="0.05"/>
    <xacro:box_inertia mass="0.1" width="0.05" height="0.05" depth="0.05"/>
  </link>

  <joint name="camera_right_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 -0.075 0.525"/>
    <parent link="base_link"/>
    <child link="camera_right_link"/>
  </joint>

</robot>
